    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="bg-white p-6 rounded-xl shadow-2xl max-w-md w-full mx-4">
            <h3 class="text-xl font-bold text-red-600 mb-4">üóëÔ∏è Confirmar Exclus√£o</h3>
